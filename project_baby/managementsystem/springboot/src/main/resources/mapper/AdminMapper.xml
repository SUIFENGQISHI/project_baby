<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.AdminMapper">
    <insert id="insert" parameterType="com.example.entity.Admin">
        insert into admin(username,password,role,name,avatar)
        values(#{username},#{password},#{role},#{name},#{avatar})
    </insert>
    <delete id="deleteById" parameterType="com.example.entity.Admin">
        delete from admin
               where id = #{id}
    </delete>
    <update id="updateById" parameterType="com.example.entity.Admin">
        update admin
        set username = #{username},password = #{password},role = #{role},avatar = #{avatar}
        where id = #{id}
    </update>
    <select id="selectAll" resultType="com.example.entity.Admin">
        select *
        from admin
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{name}, '%')
            </if>
        </where>
        order by id desc
    </select>
    <select id="selectById" resultType="com.example.entity.Admin">
        select *
        from admin
        where id = #{id}
    </select>
    <select id="selectByUsername" resultType="com.example.entity.Admin">
        select *
        from admin
        where username = #{username}
    </select>
</mapper>